<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cse_menu"
    android:background="@drawable/gradient_background_2"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="420dp"
        android:id="@+id/constraint_cse">


        <com.hitomi.cmlibrary.CircleMenu
            android:id="@+id/cir_menu_1year_cse"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.378"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/cse_transition"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/syllabus_ruled_lines_image4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="15dp"
            android:src="@drawable/general_back_icon">

        </ImageView>

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="15dp"
            android:paddingTop="13dp"
            android:src="@drawable/home_button">

        </ImageView>


    </RelativeLayout>

    <Button
        android:id="@+id/_1year_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/button_borders"
        android:text="I-B.tech" />

    <Button
        android:id="@+id/_2year_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/button_borders"
        android:text="II-B.tech"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/_3year_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="40dp"
        android:text="III-B.tech"
        android:textColor="@color/white"
        android:background="@drawable/button_borders"
        />

    <Button
        android:id="@+id/_4year_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="200dp"
        android:text="IV-B.tech"
        android:textColor="@color/white"
        android:background="@drawable/button_borders"
        />







</RelativeLayout>